@startuml
interface Command {
  +execute(): void
}

class Light {
  +on(): void
  +off(): void
}

class LightOnCommand {
  -light: Light
  +execute(): void
}

class LightOffCommand {
  -light: Light
  +execute(): void
}

class RemoteControl {
  -slot: Command
  +setCommand(cmd: Command): void
  +pressButton(): void
}

Command <|.. LightOnCommand
Command <|.. LightOffCommand
LightOnCommand o-- Light
LightOffCommand o-- Light
RemoteControl --> Command
@enduml

